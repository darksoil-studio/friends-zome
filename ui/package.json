{
	"name": "@darksoil-studio/friends-zome",
	"version": "0.400.0",
	"scripts": {
		"start": "vite --clearScreen false --port $UI_PORT",
		"build": "pnpm lint && tsc && pnpm localize:build && pnpm analyze",
		"lint": "eslint src && prettier \"src/**/*.ts\" --check --ignore-path .gitignore",
		"format": "eslint src --fix && prettier \"src/**/*.ts\" --write --ignore-path .gitignore",
		"localize:extract": "lit-localize extract",
		"localize:build": "lit-localize build",
		"analyze": "cem analyze --litelement --exclude dist"
	},
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"locales",
		"src"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/darksoil-studio/friends-zome.git"
	},
	"exports": {
		".": "./dist/index.js",
		"./dist/*": "./dist/*",
		"./locales/*": "./locales/*"
	},
	"dependencies": {
		"@darksoil-studio/private-event-sourcing-zome": "0.400.0-rev.6211f22a39ac13f941a43c8a738588d7b4dab7f6",
		"@darksoil-studio/profiles-provider": "^0.400.1",
		"@holochain/client": "^0.18.0",
		"@lit/context": "^1.0.0",
		"@lit/localize": "^0.12.0",
		"@mdi/js": "^7.2.0",
		"@msgpack/msgpack": "^2.8.0",
		"@shoelace-style/shoelace": "^2.11.0",
		"@tauri-apps/plugin-barcode-scanner": "^2.2.0",
		"@tnesh-stack/elements": "^0.400.0",
		"@tnesh-stack/signals": "^0.400.0",
		"@tnesh-stack/utils": "^0.400.0",
		"lit": "^3.0.0",
		"lodash-es": "^4.17.21"
	},
	"devDependencies": {
		"@custom-elements-manifest/analyzer": "^0.10.3",
		"@darksoil-studio/notifications-zome": "0.400.0-rev.2b0f7e8f5748aff8a98952173e1f515f43e4ef8b",
		"@lit/localize-tools": "^0.6.3",
		"@types/lodash-es": "^4.17.12",
		"tslib": "^2.6.2",
		"typescript": "^5.4.5",
		"vite": "^4.0.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"customElements": "custom-elements.json",
	"type": "module"
}
