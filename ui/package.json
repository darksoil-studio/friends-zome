{
  "name": "@darksoil-studio/friends-zome",
  "version": "0.400.0",
  "scripts": {
    "start": "vite --clearScreen false --port $UI_PORT",
    "build": "pnpm lint && tsc && pnpm localize:build && pnpm analyze",
    "lint": "eslint src && prettier \"src/**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint src --fix && prettier \"src/**/*.ts\" --write --ignore-path .gitignore",
    "localize:extract": "lit-localize extract",
    "localize:build": "lit-localize build",
    "analyze": "cem analyze --litelement --exclude dist"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "locales",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darksoil-studio/friends-zome.git"
  },
  "exports": {
    ".": "./dist/index.js",
    "./dist/*": "./dist/*",
    "./locales/*": "./locales/*"
  },
  "dependencies": {
    "@darksoil-studio/linked-devices-zome": "0.400.0-rev.681dfa4183284292d9e40832c517a52f2200ba9f",
    "@darksoil-studio/private-event-sourcing-zome": "0.400.0-rev.2b2d20792c838a1b7e248e09a2f99a2103471708",
    "@darksoil-studio/profiles-provider": "^0.400.3",
    "@holochain/client": "^0.18.0",
    "@lit/context": "^1.0.0",
    "@lit/localize": "^0.12.0",
    "@mdi/js": "^7.2.0",
    "@msgpack/msgpack": "^2.8.0",
    "@shoelace-style/shoelace": "^2.11.0",
    "@tauri-apps/plugin-barcode-scanner": "^2.2.0",
    "@tnesh-stack/elements": "^0.400.0",
    "@tnesh-stack/signals": "^0.400.0",
    "@tnesh-stack/utils": "^0.400.0",
    "lit": "^3.0.0",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@darksoil-studio/notifications-zome": "0.400.0-rev.d15ff75fd4cd747ffa098ce5891189c54c8f3c25",
    "@lit/localize-tools": "^0.6.3",
    "@types/lodash-es": "^4.17.12",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "vite": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "customElements": "custom-elements.json",
  "type": "module"
}